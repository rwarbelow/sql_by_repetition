<div class="row">
  <div class="col s12 m12">
    <div class="card-panel pink">
      <span class="white-text">
        <%= @message if @message %>
      </span>
    </div>
  </div>
</div>

<div class="row">
  <div class="col s12 m12">
    <div class="card-panel teal">
      <span class="white-text">
        <%= @question %>
      </span>
    </div>
  </div>
</div>

<form class="col s12">
  <input type="text" name="submission">
  <input type="submit">
</form>

<% unless !@data || @data.empty? %>
<table class="table bordered highlight responsive-table">
  <thead>
    <% @data.first.each do |key, value| %>
    <td class="collection-item active"><%= key %></td>
    <% end %>
  </thead>
  <% @data.each do |row| %>
  <tr>
    <% row.each do |key, value| %>
    <td><%= value %></td>
    <% end %>
  </tr>
  <% end %>
</table>
<% end %>
